#include <stdio.h>
#include <string.h>
int main(void)
{
	const int NUMBER = 22;
	int count = 1;                     // initialization

	while (count <= NUMBER)            // test
	{
		printf("Be my Valentine!\n");  // action
		count++;                       // update count
	}
	getchar();
	return 0;
}

or

#include <stdio.h>
#include <string.h>
int main(void)
{
	const int NUMBER = 22;
	for (int count = 1; count <= NUMBER; count++)
	{
		printf("Be my Valentine!\n");
	}
	getchar();
	return 0;
}
